<html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <!-- BOOTSTRAP 4-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!--CUSTOM CSS-->
    <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="templates/css/main.css">
</head>

<body>
    <div class="d-flex">
        <div id="sidebar-container" class="bg-primary">
            <div class="logo">
                <h4 class="text-light">
                    <div class="b">Dashboard</div>
                </h4>
            </div>
            <div class="menu">
                <a href="/usuarios" class="d-block text-light p-3"><i class="icon ion-md-people mr-2 lead"></i> Usuarios</a>
                <a href="/dashboard" class="d-block text-light p-3"><i class="icon ion-md-stats mr-2 lead"></i> Estadísticas</a>
                <a href="/live" class="d-block text-light p-3"><i class="icon ion-md-apps mr-2 lead"></i> Live</a>
                <a href="#" class="d-block text-light p-3"><i class="icon ion-md-person mr-2 lead"></i> Perfil</a>
            </div>
        </div>
        <div class="w-100">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <a class="navbar-brand " href="/">PYTHON web</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse " id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/entrada">entrada</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/dashboard">Dashboard</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/about">About</a>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
            <div>
                <section class="py-3">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-6">
                                <h1 class="font-weight-bold mb-0">Bienvenido</h1>
                                <p class="lead text-muted">Revisa la última información de los usuarios</p>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="container">
                <table class="table table-bordered table-striped text-center mt-4">
                    <thead>
                        <tr class="font-weight-bold">
                            <th scope="col">ID</th>
                            <th scope="col">Usuario</th>
                            <th scope="col">Nombre Completo</th>
                            <th scope="col">Placa</th>
                            <th scope="col">Rol</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach((user)=>{ %>
                        <tr>
                            <td><%= user.idlog %></td>
                            <td><%= user.username %></td>
                            <td><%= user.fullname %></td>
                            <td><%= user.placa %></td>
                            <td><%= user.rol %></td>
                            <td><%= user.estado %></td>

                            <td>
                                <a href="/edit/<%= user.idlog %>" class="btn btn-outline-info">Editar</a>
                                <a href="/delete/<%= user.idlog %>" class="btn btn-outline-danger">Eliminar</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>